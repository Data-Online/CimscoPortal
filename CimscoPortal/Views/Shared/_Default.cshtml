<html data-ng-app="app" xmlns="http://www.w3.org/1999/xhtml">
@*data-ng-app="common">*@

<!-- Head -->
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <meta name="description" content="@ViewBag.Description" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="shortcut icon" href="/assets/img/cimsco-favicon.png" type="image/x-icon">

    <!--Basic Styles-->
    @Styles.Render("~/Content/css/bootstrap")
    <link id="bootstrap-rtl-link" href="" rel="stylesheet" />


    <!--Fonts-->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,600,700,300"
          rel="stylesheet" type="text/css">

    <!--Beyond styles-->
    @Styles.Render("~/Content/css/beyond")
    <link id="skin-link" href="" rel="stylesheet" type="text/css" />

    <!--Skin Script: Place this script in head to load scripts for skins and rtl support-->
    @Scripts.Render("~/bundles/skin")

    <link href="~/Content/css/skins/darkblue.min.css" rel="stylesheet" />
    <link href="~/Content/css/metro/metromenu.css" rel="stylesheet" />

</head>
<!-- /Head -->
<!-- Body -->
<body>
    <!-- Loading Container -->
    <div class="loading-container">
        <div class="loader"></div>
    </div>
    <!--  /Loading Container -->
    <!-- Navbar -->
    <div class="navbar" data-ng-controller="app.messaging.ctrl">
        <div class="navbar-inner">
            <div class="navbar-container">
                <!-- Navbar Barnd -->
                <div class="navbar-header pull-left" style="padding-right:55px;">
                    <a href="@Url.Action("","Portal")" class="navbar-brand">
                        <small>
                            <img src="~/assets/img/CimscoLogoBase.png" alt="" />
                        </small>
                    </a>
                </div>
                <!-- /Navbar Barnd -->
                <!-- Sidebar Collapse -->
                <!-- /Sidebar Collapse -->
                <div style="padding-top:10px; font-size:large; color:white">{{common.topLevelName}}</div>

                <!-- Account Area and Settings --->
                <div class="navbar-header pull-right">
                    <div id="navbar" class="navbar-account">
                        @Html.Partial("_AccountAreaPartial")
                        <div class="setting" ng-show="false">
                            <a id="btn-setting" title="Setting" href="#">
                                <i class="icon glyphicon glyphicon-cog"></i>
                            </a>
                        </div><div class="setting-container">
                            <label>
                                <input type="checkbox" id="checkbox_fixednavbar">
                                <span class="text">Fixed Navbar</span>
                            </label>
                            <label>
                                <input type="checkbox" id="checkbox_fixedsidebar">
                                <span class="text">Fixed SideBar</span>
                            </label>
                            <label>
                                <input type="checkbox" id="checkbox_fixedbreadcrumbs">
                                <span class="text">Fixed BreadCrumbs</span>
                            </label>
                            <label>
                                <input type="checkbox" id="checkbox_fixedheader">
                                <span class="text">Fixed Header</span>
                            </label>
                        </div>
                        <!-- Settings -->
                    </div>
                </div>
                <!-- /Account Area and Settings -->
            </div>
        </div>
    </div>
    <!-- /Navbar -->
    <!-- Main Container -->
    <div class="main-container container-fluid">
        <!-- Page Container -->
        <div class="page-container">
            <!-- Page Sidebar -->
            <!-- /Page Sidebar -->
            <!-- Page Content -->
            <div class="page-content" style="margin-left:0;">
                @*<!-- Page Breadcrumb -->
                    <!-- /Page Breadcrumb -->*@
                <!-- Page Header -->
                <div class="page-header position-relative" ng-show="false">
                    @Html.MvcSiteMap().SiteMapTitle()
                    <!--Header Buttons-->
                    <div class="header-buttons">
                        <a class="sidebar-toggler" href="#">
                            <i class="fa fa-arrows-h"></i>
                        </a>
                        <a class="refresh" id="refresh-toggler" href="">
                            <i class="glyphicon glyphicon-refresh"></i>
                        </a>
                        <a class="fullscreen" id="fullscreen-toggler" href="#">
                            <i class="glyphicon glyphicon-fullscreen"></i>
                        </a>
                    </div>
                    <!--Header Buttons End-->
                </div>
                <div style="padding:20px;" id="MetroMenuDiv"></div>
                <!-- /Page Header -->
                <!-- Page Body -->
                <div class="page-body">
                    <!-- Your Content Goes Here -->
                    @RenderBody()
                </div>
                <!-- /Page Body -->
            </div>
            <!-- /Page Content -->
        </div>
        <!-- /Page Container -->
        <!-- Main Container -->
    </div>

    <!--Basic Scripts-->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <!--Beyond Scripts-->
    @Scripts.Render("~/bundles/beyond")

    <!--Angular, including 3rd pary directives-->
    @Scripts.Render("~/bundles/angular")
    <!-- Minification of this causes Angular error, $inject needed?-->
    <script src="~/Scripts/charts/chartjs/tc-angular-chartjs.js"></script>

    <style>
        .btn-disable {
            pointer-events: none;
            visibility: hidden;
        }

        .not-allowed {
            cursor: not-allowed;
        }
    </style>

    <!--Common Core Components and Dependencies-->
    <script src="~/App_/app.module.js"></script>
    <script src="~/App_/core/core.module.js"></script>
    <script src="~/App_/core/skin.js"></script>

    <script src="~/App_/dashboard/dashboard.module.js"></script>
    <script src="~/App_/detailBySite/detailBySite.module.js"></script>
    <script src="~/App_/siteOverview/siteOverview.module.js"></script>
    <script src="~/App_/invoiceDetail/invoiceOverview.module.js"></script>
    <script src="~/App_/invoices/invoices.module.js"></script>

    <script src="~/App_/external/widget.js"></script>

    <!-- Data specific to current login status -->
    <script src="~/App_/core/userDataSource.data.js"></script>

    <!-- Messaging -->
    <script src="~/App_/messaging/messaging.module.js"></script>
    <script src="~/App_/messaging/messaging.ctrl.js"></script>
    <script src="~/App_/messaging/messaging.data.js"></script>

    <script src="~/Scripts/multiselect/angularjs-dropdown-multiselect.js"></script>
    <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/lodash.js/2.4.1/lodash.min.js"></script>

    <!-- Notifications -->
    <link href="~/Scripts/toastr/AngularToaster/toaster.min.css" rel="stylesheet" />
    <script src="~/Scripts/toastr/AngularToaster/toaster.min.js"></script>

    <!-- Metro Menu -->
    <script src="~/Content/css/metro/MetroMenu.js"></script>

    <!-- Pie Charts-->
    <script src="~/App_/external/easypiechart/angular.easypiechart.min.js"></script>

    <!-- Google Charts -->
    <script src="http://bouil.github.io/angular-google-chart/ng-google-chart.js"></script>

    <!-- Test d3 -->
    <script src="~/App_/external/nvd3/d3.js"></script>
    <script src="~/App_/external/nvd3/nv.d3.js"></script>
    <script src="~/App_/external/nvd3/angularjs-nvd3-directives.js"></script>
    <link href="~/App_/external/nvd3/nv.d3.css" rel="stylesheet" />

    <!-- Jquery Sparklines -->
    <script src="~/Scripts/jquerysparkline/jquery.sparkline.min.js"></script>
    <script src="~/App_/common/directives/jqSparkline.js"></script>

    <!-- Tooltip -->
    <script src="~/App_/common/directives/tooltip.js"></script>

    <!-- Custom Factories -->
    <script src="~/App_/common/factories/googleChart.js"></script>
    <script src="~/App_/common/factories/commonDataControl.js"></script>

    <script type="text/javascript">

    $(document).ready(function () {


        $.MetroMenu(
            {
                backicon: "/Content/css/metrostatic/img/back.png", // Sub menu back item
                animation: "fadeInLeft",  // Animation
                position: "top",  // Position
                withtooltip: true, // Show tooltip on mouse over
                divholderid: "MetroMenuDiv", // Div to attach the metro meno in.
                closeonclick: false, // Menu item click, close the menu
                escclose: false,  // ESC key, close the menu
                color1: themeprimary,
                color2: themesecondary,
                items: [
                    {
                        name: "Dashboard",
                        fa: "fa-dashboard fa-3x",
                        link: "@Url.Action("","Portal")"
                        //icon: "/Content/css/metro/static/img/calendar.png"
                    },
                    {
                        name: "Detail by Site",
                        fa: "fa-sitemap fa-3x",
                        link: "@Url.Action("DetailBySite","Portal")" ///Portal/SitesOverview"
                            //icon: "/Content/css/metro/static/img/calendar.png"
                        },
                        {
                            name: "Invoices",
                            fa: "fa-check-square-o fa-3x",
                            link: "@Url.Action("Invoices","Portal")" 
                        }]
                }
                //},
                //function (OptionPress) {
                //    alert("Selected option: " + OptionPress);
                //}
            );

        });

    </script>

    @*<script src="~/App/PortalMessages/App.js"></script>
        <script src="~/App/PortalMessages/poDataSource.js"></script>
        <script src="~/App/PortalMessages/ViewModels/PortalMessageViewModel.js"></script>*@


    @*<script>
            // Bootsrtap module for message controller
            angular.element(document).ready(function () {
                var navbar = document.getElementById("navbar");
                angular.bootstrap(navbar, ["message"]);
            });
        </script>*@

    <!--Page Related Scripts-->
    @RenderSection("PageScripts", required: false)


</body>
<!--  /Body -->
</html>
