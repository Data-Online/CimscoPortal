<div class="databox databox-xxlg databox-vertical databox-shadowed bg-white radius-bordered">
    <div class="databox-top bg-blue">
        <span class="databox-header">{{doHeader.header}}</span>
    </div>
    <div class="databox-row row-12">
        <div class="databox-cell cell-4 text-center">
            <div id="{{doPageElement}}" class="chart" style="height:190px;"></div>
        </div>

        <div class="databox-cell cell-8 text-left databox-infoLines">
            <div class="databox-row row-1 padding-5 padding-left-10 text-align-left" ng-repeat="summary in doSummary">
                <div class="databox-cell cell-4">
                    <span class="databox-title no-margin">{{summary.title}}</span>
                </div>
                <div class="databox-cell cell-8">
                    <span class="databox-number">
                        {{summary.detail}}
                    </span>
                </div>
            </div>
            <div class="databox-row row-1"></div>
            <div class=" databox-row row-1 padding-5 padding-left-10 text-align-left">
                <div class="databox-cell cell-12">
                    <label>
                        <input id="checkbox_approved" type="checkbox" {{checked}}>
                        <span class="text">Approved</span>
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>
