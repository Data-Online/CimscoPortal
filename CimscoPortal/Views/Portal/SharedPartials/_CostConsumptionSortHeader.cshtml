<div class="row">
    <div class="col-lg-3 col-md-4 col-xs-12 col-sm-6 visible-lg visible-md hidden-xs hidden-sm">
        <div class="margin-top-10 visible-xs hidden-lg hidden-md"></div>
        <div class="row">
            <div class="col-xs-2 col-sm-2">
                <span ng-show="true" class="databox-number white tootip-info pull-left" 
                      data-container="body" 
                      data-titleclass="bordered-blue" 
                      data-class="dark" 
                      data-toggle="popover" 
                      data-placement="auto"
                      data-title="Costs and Consumption"
                      data-content="{{::chartHelpText.detail}}"
                      data-original-title="" title=""
                      data-trigger="hover">
                    <i class="fa fa-2x fa-info-circle" style="color:#262626"></i>
                </span>
            </div>
        </div>
    </div>
    <div class="col-lg-9 col-md-8 col-xs-12 col-sm-6" ng-init="options={};options.selected=false">
        <div class="row">
            <div class="col-md-5 col-xs-12 col-sm-12">
                <label ng-show="includeBarChart">
                    <input class="checkbox-slider toggle colored-success" ng-model="showAsBar" type="checkbox" data-ng-click="toggleGraphType($event)">
                    <span class="text">&nbsp;<i class="fa fa-bar-chart" style="color:#262626"></i>&nbsp;Show data as bar chart</span>
                </label>
            </div>
            <div class="visible-xs hidden-md hidden-sm clearfix">&nbsp;</div>
            <div class="col-md-5 col-xs-12 col-sm-12">
                <span></span>
                <label ng-show="true">
                    <input class="checkbox-slider toggle colored-blue" data-ng-click="togglePreviousYearsData($event)" type="checkbox" ng-model="showPrevious12">
                    <span class="text">&nbsp;<i class="fa fa-calendar-minus-o" style="color:#262626"></i>&nbsp;Include data from previous year</span>
                </label>
            </div>
            <div class="col-md-5 col-xs-12 col-sm-12">
                <label ng-show="allowDisplayByDivision">
                    <input class="checkbox-slider toggle colored-magenta" data-ng-click="splitOutDivisions()" type="checkbox" ng-model="splitDivisons" />
                    <span class="text">&nbsp;<i class="fa fa-th-large" style="color:#262626"></i>&nbsp;Show data by each division</span>
                </label>
            </div>
            <div class="visible-xs hidden-md hidden-sm clearfix">&nbsp;</div>
            <div class="col-md-5 col-xs-12 col-sm-12">
                <label ng-show="allowShowEnergySavings">
                    <input class="checkbox-slider toggle colored-warning" data-ng-click="toggleEnergySavingData($event)" type="checkbox" ng-model="showSavings" />
                    <span class="text">&nbsp;<i class="fa fa-money" style="color:#262626"></i>&nbsp;Show energy saving estimates</span>
                </label>
            </div>
        </div>
    </div>
</div>
<div class="horizontal-space space-sm"></div>
