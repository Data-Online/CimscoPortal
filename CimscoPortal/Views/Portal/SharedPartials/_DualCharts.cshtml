@{
    var leftGraph = (string)ViewData["leftGraph"];
    var rightGraph = (string)ViewData["rightGraph"];
    var border = (string)ViewData["border"];
}

<div class="row" ng-style="{opacity: ((loading) && .4) || 1.0}">
    <div class="col-xs-12 col-md-6">
        <div class="widget">
            <div dual-chart-header chart="@leftGraph" border="@border"></div>
            <div class="show-hide-animate">
                <div class="widget-body show-hide-animate" style="height: 360px;  padding-top:5px; padding-right:0; padding-left:0">
                    <div class="col-lg-12">
                        <div google-chart chart="@leftGraph" agc-on-select="seriesSelected(selectedItem)" style="height:330px; width:100%; padding-right:5px;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-md-6">
        <div class="widget">
            <div dual-chart-header chart="@rightGraph" border="@border"></div>
            <div class="show-hide-animate">
                <div class="widget-body show-hide-animate" style="height: 360px;  padding-top:5px; padding-right:0; padding-left:0">
                    <div class="col-lg-12">
                        <div google-chart chart="@rightGraph" agc-on-select="seriesSelected(selectedItem)" style="height:330px; width:100%; padding-right:5px;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

