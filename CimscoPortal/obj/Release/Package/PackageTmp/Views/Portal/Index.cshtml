@{
    ViewBag.Title = "Dashboard";
    ViewBag.Description = "Cimsco Dashboard";
    Layout = "~/Views/Shared/_Default.cshtml";
}

<div class="row" ng-controller="MorrisCtrl2">
    <div class="col-xs-12 col-md-3 col-lg-3">
        @Html.Partial("_CompanyList2")
    </div>
    <div class="col-xs-12 col-md-6">
       @Html.Partial("_InvoiceHistory")
    </div>
    <div class="col-md-3 col-sm-3 col-xs-12">
        @Html.Partial("_InvoiceApproval")
    </div>
</div>



@section PageScripts{

    <script src="/Scripts/charts/morris/morris-init.js"></script>

    <script src="/Scripts/charts/sparkline/jquery.sparkline.js"></script>
    <script src="/Scripts/charts/sparkline/sparkline-init.js"></script>

    <script type="text/javascript">
        $(window).bind("load", function () {

            /*Sets Themed Colors Based on Themes*/
            themeprimary = getThemeColorFromCss('themeprimary');
            themesecondary = getThemeColorFromCss('themesecondary');
            themethirdcolor = getThemeColorFromCss('themethirdcolor');
            themefourthcolor = getThemeColorFromCss('themefourthcolor');
            themefifthcolor = getThemeColorFromCss('themefifthcolor');

            InitiateSparklineCharts.init();

            //InitiateBarChart.init();
        });
    </script>

    <script src="~/Scripts/nestable/jquery.nestable.min.js"></script>
    <script type="text/javascript">
        jQuery(function ($) {
            $('.dd').nestable();
            $('.dd-handle a').on('mousedown', function (e) {
                e.stopPropagation();
            });
        });
    </script>
    <script src="~/App/Dashboard/ViewModels/dbCompanyDetails.js"></script>
    <script src="~/App/Dashboard/coDataSource.js"></script>

    <script src="~/Scripts/charts/morris/raphael-2.0.2.min.js"></script>
    <script src="~/Scripts/charts/morris/morris.js"></script>
    <script src="~/Scripts/charts/morris/morris-init-orig.js"></script>
}
