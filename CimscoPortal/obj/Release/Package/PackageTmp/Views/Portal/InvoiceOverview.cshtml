@{
    ViewBag.Title = "Dashboard";
    ViewBag.Description = "Cimsco Dashboard";
    Layout = "~/Views/Shared/_Default.cshtml";
}

<div data-ng-app="invoice" class="row" data-ng-controller="invoiceOverviewViewModel">
    <div class="col-xs-12 col-md-3 col-lg-3">
        @Html.Partial("_SiteList")
    </div>
    <div class="col-md-4 col-sm-4 col-xs-12">
        @Html.Partial("_InvoiceList")
    </div>
</div>



@section PageScripts{

    <script src="~/Scripts/nestable/jquery.nestable.min.js"></script>
    <script type="text/javascript">
        jQuery(function ($) {
            $('.dd').nestable();
            $('.dd-handle a').on('mousedown', function (e) {
                e.stopPropagation();
            });
        });
    </script>

    <script src="~/App/Invoice/App.js"></script>
    <script src="~/App/Invoice/inDataSource.js"></script>
    <script src="~/App/Invoice/ViewModels/InvoiceOverviewViewModel.js"></script>
}
