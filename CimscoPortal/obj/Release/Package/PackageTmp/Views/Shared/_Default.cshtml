    <script type="text/javascript">
        var template = document.getElementById('pg-alerts').innerHTML;
        document.getElementById('pg-alerts').innerHTML = '';
        var newTemplate = '';
        var InitiateAccountData = function () {
            return {
                init: function (alertType) {
                    var myArray = [];
                    var jq = $.getJSON("/portal/GetNavbarData/" + alertType)
                     .done(function (data) {
                         for (var i = 0; i < data.length; i++)
                         {
                             newTemplate = newTemplate + template.replace('{{MessageText}}', data[i].Message)
                                                    .replace('{{MessageTime}}', '01:00pm');

                             //changetext(data[i]);
                         }
                         document.getElementById('pg-alerts').innerHTML = newTemplate;
                        });
                }
            }
        }();
    </script>
    <script type="text/javascript">
